#!/bin/bash
while getopts :ac OPT
do
    case $OPT in
        a)  ambiguous=1
            ;;
        c)  copy=1
            ;;
        \?) echo "howto: invalid option.";exit 1
    esac
done

shift $((OPTIND - 1))

if [ $# -lt 1 ];then
    echo "howto: needs words what you want to do."
    exit 1
fi

dictdir=`dirname $(dirname $0)`/dict

# for ambiguous mode
if [ ${ambiguous+1} ];then
    expression=$(echo *${@}* | sed "s/ /*/g")
    availables=$(find $dictdir -name "$expression")
    if [ -z "$availables" ];then
        echo "no knowledge available.";exit 2
    fi
    echo "available knowledges:"
    for item in $availables;do
        echo -en `basename $item | sed "s/-/ /g"`"\t"
    done
    echo ''
    exit 0
fi

# main
target=$(echo $@ | sed "s/ /-/g")
knowledge=`find $dictdir -name $target | head -n 1`
if [ -z "$knowledge" ];then
    echo "no knowledge available.";exit 2
fi
if [ ${copy+1} ];then
    cat $knowledge | tr "\r\n" ";" | clip.exe
else
    cat $knowledge
fi
exit 0
