#!/bin/bash
# while getopts :ac OPT
# do
#     case $OPT in
#         a)  ambiguous=1
#             ;;
#         c)  copy=1
#             ;;
#         \?) echo "howto: invalid option.";exit 1
#     esac
# done

bash=/bin/bash
libdir=`dirname $(dirname $0)`/lib
source ${libdir}/version

ANB=0
COPY=0
words=()

while (( $# > 0 ))
do
    case $1 in
        -h | --help)
            echo "howto ${version}"
            echo "Usage: howto [-a|--ambiguous|-c|--copy] WORDS..."
            echo "Options:"
            echo "    -a, --ambiguous: show knowledges contains input words."
            echo "    -c, --copy: copy found one on your clipboard instead of output."
            exit 0
        ;;
        -a | --ambiguous)
            ANB=1
        ;;
        -c | --copy)
            COPY=1
        ;;
        -* | --*)
            echo "bad option."
            exit 1
        ;;
        *)
            words+=($1)
        ;;
    esac
    shift
done

if [ ${#words[@]} -lt 1 ];then
    echo "howto: needs words what you want to do."
    exit 1
fi

main=${libdir}/howto_main
ambiguous=${libdir}/howto_ambiguous_search

if [ ${ANB} -eq 1 ];then
    # ambiguous search
    $bash ${ambiguous} ${words[@]}
else
    # regular search
    $bash ${main} ${COPY} ${words[@]}
fi
exit $?
