#!/bin/bash
group="common"
while getopts g:p OPT
do
    case $OPT in
        g)  group=$OPTARG
            ;;
        p)  group="0_private"
            ;;
        \?) echo "howto: invalid option.";exit 1
    esac
done

shift $((OPTIND - 1))

if [ $# -lt 1 ];then
    echo "theway: needs words for knowledge. what you want to memorize?"
    exit 1
fi

knowledge=$(echo $@ | sed "s/ /-/g")
dictdir=$(dirname $(dirname $0))/dict/${group}
file="${dictdir}/${knowledge}"

test -d $dictdir || mkdir -p $dictdir

overwrite=0
if [ -f $file ];then
    echo "knowledge exists. do you want to overwrite? Y/*"
    while read -s line;do
        if [ Y = "$line" ];then
            overwrite=1
            break
        fi
        exit 0
    done
fi

tmp=$(dirname $file)"/_$(basename $file)"
rm -f $tmp

echo 'type knowledge (finish with "q"):'

while read line;do
    if [ q = "$line" ];then
        break
    fi
    echo $line >> $tmp
done

mv $tmp $file

if [ $overwrite != 0 ];then
    echo "update knowledge: $@"
else
    echo "remember new knowledge: $@"
fi
echo ""
cat $file
